#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-buster-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["src/ApiGateways/Web.Platform.HttpAggregator/Web.Platform.HttpAggregator.csproj", "src/ApiGateways/Web.Platform.HttpAggregator/"]
RUN dotnet restore "src/ApiGateways/Web.Platform.HttpAggregator/Web.Platform.HttpAggregator.csproj"
COPY . .
WORKDIR "/src/src/ApiGateways/Web.Platform.HttpAggregator"
RUN dotnet build "Web.Platform.HttpAggregator.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Web.Platform.HttpAggregator.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Web.Platform.HttpAggregator.dll"]
{
  "GlobalConfiguration": {

  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/account/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/login",
      "UpstreamHttpMethod": [ "Post" ],
      "ReRoutesCaseSensitive": false,
      "DangerousAcceptAnyServerCertificateValidator": false

    },

    {
      "DownstreamPathTemplate": "/api/account/register",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/register",
      "UpstreamHttpMethod": [ "Post" ],
      "ReRoutesCaseSensitive": false,
      "DangerousAcceptAnyServerCertificateValidator": false
    },

    {
      "DownstreamPathTemplate": "/api/account/users",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/users",
      "UpstreamHttpMethod": [ "Get" ],
      "ReRoutesCaseSensitive": false,
      "DangerousAcceptAnyServerCertificateValidator": false,
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "Admin" ]
      }
    },

    {
      "DownstreamPathTemplate": "/api/home/index",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/index",
      "UpstreamHttpMethod": [ "Get" ],
      "ReRoutesCaseSensitive": false,
      "DangerousAcceptAnyServerCertificateValidator": false,
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "Admin", "User" ]
      }
    },

    {
      "DownstreamPathTemplate": "/api/home/about",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/about",
      "UpstreamHttpMethod": [ "Get" ],
      "ReRoutesCaseSensitive": false,
      "DangerousAcceptAnyServerCertificateValidator": false,
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "Admin" ]
      }
    }
  ],

  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=_CHANGE_ME;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}